{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "outDir": "dist",
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "./types",
      "jest",
      "node",
      "@types/jest",
      "@types/ts-nameof",
      "jest-sorted",
      "reflect-metadata"
    ]
  },
  "exclude": [
    "dist/**/*"
  ],
  "extends": "@xylabs/tsconfig",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true,
    "transpileOnly": true
  }
}