{
  "$schema": "http://json.schemastore.org/package.json",
  "name": "@xyo-network/archivist-server",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.96",
  "description": "XYO Archivist",
  "sideeffects": false,
  "engines": {
    "node": ">=16 <17"
  },
  "workspaces": [
    "packages/*"
  ],
  "esm5": "dist/esm/index.js",
  "exports": {
    ".": {
      "esm5": "./dist/esm/index.js",
      "node": {
        "import": "./dist/cjs/index.js",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "start": "nodemon",
    "launch": "node --max-old-space-size=8192 --experimental-specifier-resolution=node ./dist/cjs/index.js",
    "clean": "yarn workspaces foreach -pv run clean:package",
    "deps": "yarn workspaces foreach -pv run deps:package",
    "lint": "echo Linting... && yarn eslint .",
    "cycle": "yarn workspaces foreach -pv run cycle:package",
    "fix": "yarn workspaces foreach -pv run fix:package",
    "outdated": "yarn workspaces foreach -pv outdated",
    "clean:package": "yarn rimraf -q $INIT_CWD/dist && yarn rimraf -q $INIT_CWD/build",
    "fix:package": "yarn eslint $INIT_CWD/src --fix",
    "cycle:package": "yarn eslint --rule \"import/no-cycle:[1, { maxDepth: 10 }]\" $INIT_CWD/src",
    "deps:package": "depcheck $INIT_CWD",
    "build": "yarn lint && yarn build:esm && yarn build:cjs",
    "build:cjs": "yarn workspaces foreach -ptRv run build:package:cjs",
    "build:esm": "yarn workspaces foreach -ptRv run build:package:esm",
    "build:package:cjs": "tsc -p $INIT_CWD/tsconfig.build.cjs.json",
    "build:package:esm": "tsc -p $INIT_CWD/tsconfig.build.esm.json",
    "license": "yarn license-checker --exclude \"MIT, ISC, Apache-2.0, BSD, BSD-2-Clause, CC-BY-4.0, Unlicense, CC-BY-3.0, CC0-1.0\"",
    "test": "jest ./src",
    "test:hash": "jest ./src/hash",
    "test:domain": "jest ./src/domain",
    "test:schema": "jest ./src/schema"
  },
  "author": "Arie Trouw",
  "license": "LGPL-3.0",
  "dependencies": {
    "@xylabs/sdk-api-express-ecs": "^1.2.4",
    "@xylabs/sdk-js": "^2.6.2",
    "@xyo-network/archivist-dependencies": "workspace:^",
    "@xyo-network/archivist-middleware": "workspace:^",
    "@xyo-network/archivist-model": "workspace:^",
    "@xyo-network/archivist-query-handlers": "workspace:^",
    "@xyo-network/archivist-queue": "workspace:^",
    "@xyo-network/archivist-routes": "workspace:^",
    "@xyo-network/archivist-types": "workspace:^",
    "@xyo-network/sdk-xyo-client-js": "^2.22.20",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "inversify": "^6.0.1",
    "passport": "^0.6.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/passport": "^1.0.9",
    "@types/uuid": "^8.3.4",
    "@xylabs/ts-scripts": "^2.5.6",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "license-checker": "^25.0.1",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "types": "dist/esm/index.d.ts"
}
