{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "ignorePatterns": ["node_modules", "build", "dist", "bin", "package.json", "*.d.ts", "rollup.config.js"],
  "rules": {
    "import/no-internal-modules": [
      "warn", {
        "allow": [
          "source-map-support/*",
          "lodash/*",
          "aws-sdk/**/*",
          "types/*"
        ]
      }
    ]
  }
}
