{
  "root": true,
  "extends": [
    "@xylabs"
  ],
  "ignorePatterns": [
    "node_modules",
    "build",
    "coverage",
    "dist",
    "bin",
    "package.json",
    "*.d.ts",
    "rollup.config.js",
    "swagger.json"
  ],
  "rules": {
    "@typescript-eslint/member-ordering": [
      "error",
      {
        "default": {
          "memberTypes": [],
          "order": "alphabetically"
        }
      }
    ],
    "import/no-internal-modules": [
      "warn",
      {
        "allow": [
          "source-map-support/*",
          "lodash/*",
          "aws-sdk/**/*",
          "types/*"
        ]
      }
    ]
  }
}