{
  "$schema": "http://json.schemastore.org/package.json",
  "name": "@xyo-network/archivist",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.96",
  "description": "XYO Archivist",
  "sideeffects": false,
  "engines": {
    "node": ">=16 <17"
  },
  "workspaces": [
    "packages/*"
  ],
  "esm5": "dist/esm/index.js",
  "exports": {
    ".": {
      "esm5": "./dist/esm/index.js",
      "node": {
        "import": "./dist/cjs/index.js",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "deploy": "echo Deploy not allowed!",
    "deploy3": "echo Deploy3 not allowed!",
    "start": "nodemon",
    "launch": "node --max-old-space-size=8192 --experimental-specifier-resolution=node ./dist/cjs/index.js",
    "clean": "yarn workspaces foreach -pv run clean:package",
    "deps": "yarn workspaces foreach -pv run deps:package",
    "lint": "echo Linting... && yarn eslint .",
    "cycle": "yarn workspaces foreach -pv run cycle:package",
    "fix": "echo Fixing... && yarn eslint . --fix",
    "outdated": "yarn workspaces foreach -pv outdated",
    "clean:package": "yarn rimraf -q $INIT_CWD/dist && yarn rimraf -q $INIT_CWD/build",
    "cycle:package": "yarn eslint --rule \"import/no-cycle:[1, { maxDepth: 10 }]\" $INIT_CWD/src",
    "deps:package": "depcheck $INIT_CWD",
    "build": "yarn build:esm && yarn build:cjs",
    "build:cjs": "yarn workspaces foreach -ptRv run build:package:cjs",
    "build:esm": "yarn workspaces foreach -ptRv run build:package:esm",
    "build:package:cjs": "tsc -p $INIT_CWD/tsconfig.build.cjs.json",
    "build:package:esm": "tsc -p $INIT_CWD/tsconfig.build.esm.json",
    "license": "yarn license-checker --exclude \"MIT, ISC, Apache-2.0, BSD, BSD-2-Clause, CC-BY-4.0, Unlicense, CC-BY-3.0, CC0-1.0\"",
    "test": "jest ./src",
    "test:hash": "jest ./src/hash",
    "test:domain": "jest ./src/domain",
    "test:schema": "jest ./src/schema"
  },
  "author": "Arie Trouw",
  "license": "LGPL-3.0",
  "dependencies": {
    "@xylabs/sdk-api-express-ecs": "^1.2.4",
    "@xyo-network/archivist-server": "workspace:^",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@types/jest": "^28.1.6",
    "@types/source-map-support": "0.5.4",
    "@xylabs/eslint-config": "^2.5.3",
    "@xylabs/ts-scripts": "^2.5.3",
    "@xylabs/tsconfig": "^2.5.3",
    "@xyo-network/sdk-xyo-client-js": "2.22.15",
    "babel-jest": "^28.1.3",
    "depcheck": "^1.4.3",
    "eslint": "^8.20.0",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.7",
    "jest-sorted": "^1.0.14",
    "license-checker": "^25.0.1",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.2",
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.19"
  }
}
