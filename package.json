{
  "$schema": "http://json.schemastore.org/package.json",
  "name": "@xyo-network/node",
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.96",
  "description": "XYO Archivist",
  "sideeffects": false,
  "engines": {
    "node": ">=16 <17"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "esm5": "dist/esm/index.js",
  "exports": {
    ".": {
      "esm5": "./dist/esm/index.js",
      "node": {
        "import": "./dist/cjs/index.js",
        "require": "./dist/cjs/index.js"
      },
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "deploy": "echo Deploy not allowed!",
    "deploy3": "echo Deploy3 not allowed!",
    "launch": "node --max-old-space-size=8192 --experimental-specifier-resolution=node ./dist/cjs/index.js",
    "outdated": "yarn workspaces foreach -pv outdated",
    "start": "nodemon",
    "test": "jest --no-cache --forceExit",
    "test:ci": "jest --runInBand --coverage --forceExit"
  },
  "author": "Arie Trouw",
  "license": "LGPL-3.0",
  "dependencies": {
    "@xylabs/sdk-api-express-ecs": "^1.2.4",
    "@xyo-network/archivist-server": "workspace:^",
    "dotenv": "^16.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.23",
    "@types/source-map-support": "0.5.6",
    "@xylabs/eslint-config": "^2.7.22",
    "@xylabs/ts-scripts-yarn3": "^2.7.22",
    "@xylabs/tsconfig": "^2.7.22",
    "@xyo-network/account": "^2.36.0",
    "@xyo-network/archivist-test": "workspace:^",
    "@xyo-network/boundwitness": "^2.36.0",
    "@xyo-network/payload": "^2.36.0",
    "babel-jest": "^29.1.0",
    "jest": "^29.1.1",
    "jest-extended": "^3.1.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "resolutions": {
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.3",
  "private": true,
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.19"
  }
}
